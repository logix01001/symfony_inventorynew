{% extends 'base.html.twig' %}

{% block title %}Hello PagesController!{% endblock %}

{% block body %}

{% for message in app.flashes('notice') %}
   <div class="row">
      <div class="col-lg-12">
      <div class="alert alert-success" role="alert">
        {{ message }}
      </div>
      </div>
    </div>
{% endfor %}

    <div class="row">
        <div class="col-lg-12">
            {{ form(form) }}
            <a href="{{ path('product.show') }}"> <button class="btn btn-success"> Add Product </button></a>
            <a href="{{ path('category.show') }}"> <button class="btn btn-info"> Add Category </button></a>
        </div>
    </div>
     <div class="row">
        <div class="col-lg-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Serial Number</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    {% for product in products%}
                    <tr>
                        <td>{{ product.getName()}}</td>
                        <td>{{ product.getSerialNumber()}}</td>
                        <td>{{ product.getCategory().getName()}}</td>
                        <td>
                            <a href="{{ path('product.show',{'id' : product.getId() }) }}"><button class="btn btn-warning">Edit</button></a>
                            <button class="btn btn-danger delete"  data-action="{{ path('product.delete', {'id': product.getId() }) }}">Edit</button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.getName() }}</td>
                            <td>
                                <a href="{{ path('category.show', { 'id' : category.getId() }) }}"> <button class="btn btn-warning">Edit</button></a>
                                <button class="btn btn-warning deleteCategory" data-action="{{ path('category.delete', { 'id' : category.getId() }) }}">Delete</button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>


         <form id="formdelete" action="" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" hidden>
            </form>
    </div>
{% endblock %}


{% block javascripts %}
    <script>
        $(document).ready(function(){
            $(document).on('click', '.delete', function(){
                if(confirm("Are you sure you want to continue?")){
                    let action =  $(this).data('action')
                    $('#formdelete').attr('action',action).submit()
                    $('#formdelete').attr('action')

                }
            })

             $(document).on('click', '.deleteCategory', function(){
                if(confirm("Are you sure you want to continue?")){
                    let action =  $(this).data('action')
                    $('#formdelete').attr('action',action).submit()
                    $('#formdelete').attr('action')

                }
            })
        })
    </script>
{% endblock %}